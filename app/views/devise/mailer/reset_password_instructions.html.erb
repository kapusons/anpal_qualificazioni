<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555; text-align: center;">
      <p><%= t('devise.mailer.reset_password_instructions.greeting', recipient: @resource.email) %></p>


      <p><%= t('devise.mailer.reset_password_instructions.instruction') %></p>
    </td>
  </tr>
  <tr>
    <td style="padding: 0 20px 20px;">
      <!-- Button : BEGIN -->
      <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
        <tr>
          <td class="button-td button-td-primary" style="border-radius: 4px; background: #009688;">
            <%= link_to t('devise.mailer.reset_password_instructions.action'), edit_password_url(@resource, reset_password_token: @token), class: "button-a button-a-primary", style: "background: #009688; font-family: sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: white; display: block; border-radius: 4px; text-transform: uppercase;" %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;">
      <p><%= t('devise.mailer.reset_password_instructions.instruction_2') %></p>
      <p><%= t('devise.mailer.reset_password_instructions.instruction_3') %></p>
    </td>
  </tr>
</table>